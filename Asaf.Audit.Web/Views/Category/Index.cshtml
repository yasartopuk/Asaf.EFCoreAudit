@model List<Category>
@{
    ViewData["Title"] = "Categories";
}
<h2>Category List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-condensed table-responsive table-bordered table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                    <button class="btn btn-info" onclick="showAuditLog('Category',@category.Id)">History</button>
                </td>
            </tr>
        }
    </tbody>
</table>
